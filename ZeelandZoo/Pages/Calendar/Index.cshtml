@page
@model ZeelandZoo.Pages.Calendar.IndexModel
@{
}

<html lang='en'>
<head>
    <meta charset='utf-8' />
    <style>
        
        .fc {
            color: #CCCCCC; 
        }

    </style>
    <script src='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/index.global.min.js'></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/locales/da.js'></script>
    <script>
        


        document.addEventListener('DOMContentLoaded', function () {
            var calendarEl = document.getElementById('calendar');

            var calendar = new FullCalendar.Calendar(calendarEl, {               
                headerToolbar: {
                    left: 'prev,next today',
                    center: 'title',
                    right: 'dayGridMonth,timeGridWeek,timeGridDay'
                },
                buttonText: {
                    today: 'I dag',
                    month: 'Måned',
                    week: 'Uge',
                    day: 'Dag',
                    prev: 'Forrige',
                    next: 'Næste'
                },
                locale: 'da',
                events: [
        @foreach (var evt in Model.Events)
        {
            <text>{
                            id: '@evt.Id',
                            title: '@evt.Name',
                            start: '@String.Format("{0:yyyy-MM-ddTHH:mm:ss}", evt.EventDate)',
                            description: '@evt.Description'
                        },
            </text>
        }
                        ],
                eventClick: function (info) {
                    //Her burde man så kunne implementerer noget, hvor det kan klikke på de individuelle events i kalenderen for at fkomme ind på EventsCRUD/Details, men det er lave prio lige nu
                }
            });


            calendar.render();

        });

    </script>
</head>
<body>
    <style>
        .calendar-container {
            background-image: url('https://img.freepik.com/premium-photo/black-brick-wall-loft-interior-design-black-paint-facade_73152-3913.jpg');
            background-size: 100% 100%;
            background-repeat: no-repeat;
            background-position: center center;
        }
    </style>
    <div class='calendar-container'>
       <div id='calendar'></div>
    </div>
</body>
</html>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
