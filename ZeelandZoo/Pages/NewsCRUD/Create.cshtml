@page
@model ZeelandZoo.Pages.NewsCRUD.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Opret nyhed</h1>

<h4>Nyheder</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="News.Title" class="control-label"></label>
                <input asp-for="News.Title" class="form-control" />
                <span asp-validation-for="News.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="News.Description" class="control-label"></label>
                <textarea asp-for="News.Description" class="form-control" rows="5"></textarea>
                <span asp-validation-for="News.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="News.Author" class="control-label"></label>
                <input asp-for="News.Author" class="form-control" />
                <span asp-validation-for="News.Author" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="News.NewsDate" class="control-label"></label>
                <input asp-for="News.NewsDate" class="form-control" />
                <span asp-validation-for="News.NewsDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Tilbage til listen</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
